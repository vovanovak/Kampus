                    <a href="@Url.Action("Index", "Tasks")"><img src="../../Images/toolbar/task.png" title="Завдання" /></a>
                </div>
                <div>
                    <a href="@Url.Action("Index", "Settings")"><img src="../../Images/toolbar/settings.png" title="Налаштування" /></a>
                </div>
                <div>
                    <a href="@Url.Action("Index", "Logout")"><img src="../../Images/toolbar/logout.png" title="Вихід" /></a>
