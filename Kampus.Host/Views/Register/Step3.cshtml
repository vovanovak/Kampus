@model Kampus.Models.UserModel
@{
    ViewBag.Title = "Step3";
}

<html>
<head>
    <title>Реєстрація</title>
    <link rel="SHORTCUT ICON" href="~/images/favicon.png" type="image/x-icon"/>

    <link rel="stylesheet" href="~/css/null_style.css" />
    <link rel="stylesheet" href="~/css/register_style.css"/>

    <script type="text/javascript" src="~/lib/jquery/jquery-1.8.2.min.js"></script>
    <script type="text/javascript" src="~/js/readurl.js"></script>
    <script type="text/javascript" src="~/js/get_university_faculties.js"></script>
    <script type="text/javascript" src="~/js/register.js"></script>
</head>
    <body>
        <div id="logo">
            <img src="/Images/logo_blue.png" width="400" />
        </div>
        <div id="main">
            <div class="text" style="font-size: 24pt">Покажи нам свою індивідуальність</div>

            <div class="text" style="font-size: 20pt">Завантаж своє фото</div>
            @using (Html.BeginForm("Step3", "Register", null, FormMethod.Post, true,
                new {enctype = "multipart/form-data", action = "/Register/Step3" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)


                <img class="imgavatar" src="/Images/unknown.png" />

                <input id="addavatar" title="Додати"
                        type="file" name="file" />


                <div class="text" style="font-size: 20pt">Придумай свій нік</div>

                <div style="margin-left: 160px">
                    <span style="color: #184b7f; font-size: 22pt;">@@</span>
                    <input type="text" id="inputSignInUsername" class="inputSignIn" placeholder="NickName" name="username"/>
                    <img id="inputval" src="/Images/no.png" width="40"/>
                </div>

                <input type="submit" id="nextstep" value="Продовжити"/>
            }
        </div>
    </body>
</html>