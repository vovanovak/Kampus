@{
    ViewBag.Title = "SignIn";
}

<html>
<head>
    <title>Вхід</title>

    <link rel="SHORTCUT ICON" href="~/images/favicon.png" type="image/x-icon" />
    <link rel="stylesheet" href="~/css/null_style.css" />
    <link rel="stylesheet" href="~/css/signin_style.css" />

    <script type="text/javascript" src="~/lib/jquery/jquery-1.8.2.js"></script>
    <script type="text/javascript" src="~/js/signin.js"></script>
</head>
<body>


<div id="main">
    <div>
        <img id="mainbiglogo" src="/Images/logo_blue.png" width="500"/>
    </div>
    <div id="mainsubheader">
        <span>студентська спільнота</span>
    </div>
    <div id="mainform">
        <div>
            <input type="text" id="inputSignInUsername" class="inputSignIn" placeholder="Логін"/>
        </div>

        <div>
            <input type="password" id="inputSignInPassword" class="inputSignIn" placeholder="Пароль"/>
        </div>

        <div id="recoverpassword">
            <a id="recoverpasswordlnk" href="@Url.Action("PasswordRecovery", "Settings")">Відновити пароль</a>
        </div>

        <div id="inputSignInBtn">
            Увійти
        </div>
    </div>
</div>
</body>

</html>